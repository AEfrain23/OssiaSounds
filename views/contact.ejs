<%- include("partials/header") %>

  <div class="content-border">
    <div class="contact-page">
      <h1 class="page-title">CONTACT US</h1>
      <div class="contact-intro">
        <p>Please use the contact form below if you would like to get in touch!</p>
      </div>
      <form class="contact-form" action="/send-message" method="POST" >
        <div class="item one">
          <div class="firstName">
            <p>First Name</p>
            <input type="text" name="firstName" id="firstName" required>
          </div>
          <div class="secondName">
            <p>Second Name</p>
            <input type="text" name="secondName" id="secondName" required>
          </div>
        </div>
        <div class="item three">
          <p>Your Email</p>
          <input type="email" name="customerEmail" id="customerEmail" required>
        </div>
        <div class="item four">
          <p>Message</p>
          <div>
            <textarea class="item four" type="text" rows="10" name="customerMessage" id="customerMessage" required></textarea>
          </div>
        </div>
        <div class="g-recaptcha" data-sitekey="6LcwvtkqAAAAANRiNOdjt898TQZpKP7_L0H4gJ64"></div>
        <div class="item five">
          <button type="submit" class="send-button">SEND</button>
        </div>
      </form>
    </div>

      <!-- Confirmation Container to display message after submission -->
  <% if (locals.confirmation) { %>
    <div class="confirmation-container" style="visibility: visible;">
      <div class="confirmation-box">
        <p class="confirmation-message"><%- confirmation %></p>
      </div>
    </div>
  <% } %>
  
  <!-- </div> -->
  <!-- Continuing to footer for "subscribe-section" -->

  <%- include("partials/footer") %>